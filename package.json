{
  "name": "yt-full-browser-mode",
  "displayName": "YT Full Browser Mode",
  "version": "0.1.2",
  "description": "Youtube extension for full browser mode",
  "author": "Murathan Kagan",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.90.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://www.youtube.com/*"
    ],
    "web_accessible_resources": [
      {
        "resources": [ "assets/full.png", "assets/icon.png", "assets/video.gif" ],
        "matches": [ "https://www.youtube.com/*" ]
      }
    ]
  },
  "plasmo": {
    "content_scripts": [
      {
        "matches": [
          "https://www.youtube.com/*"
        ],
        "ts": "contents/content.tsx",
        "css": [
          "contents/style.css"
        ]
      }
    ]
  }
}
